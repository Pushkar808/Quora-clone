    <div id="line"></div>
    <ul id="comment-bullet">
        <li>
            <div id="Comment">
                <div id="comment-descr">
                    <p>THIS IS COMMENT</p>
                </div>
                <div id="comment-like"><a href="#">Like<i class="far fa-thumbs-up"></div></i></a></span>
                <div id="comment-like">
                    <p><a href="/user/showprofile/?id=<%= question.user.id %>">Created By: <%= question.user.fullname %>
                        </a></span>
                </div>
        </li>
    </ul>
</div>