<div>
    <div id="full-question-container">
        <div id="question">
            <p>
                <%= question.title %>
            </p>
        </div>
        <div id="ques-description">
            <p>
                <%= question.description %>
            </p>
        </div>
        <div id="detail-ques-info">
            <span><a href="/like/toggle/?id=<%= question._id %>&type=Question">Like<i class="far fa-thumbs-up"></i>:<%=
                        question.likes.length %></a></span>
            <span>Comments:100</span>
            <span><a href="/user/showprofile/?id=<%= question.user.id %>">Created By: <%= question.user.fullname %>
                </a></span>
        </div>
    </div>
</div>

